generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  name           String?
  email          String        @unique
  password       String
  role           UserRole      @default(STAFF)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  EnquiryForm    EnquiryForm[] @relation("MemberCreatedBy")
  createdMembers Member[]      @relation("MemberCreatedBy")
  Member         Member[]      @relation("MemberUser")
  Payment        Payment[]     @relation("MemberCreatedBy")
  TourMember     TourMember[]  @relation("MemberCreatedBy")
  TourPackage    TourPackage[] @relation("MemberCreatedBy")
}

model Member {
  id          String       @id @default(cuid())
  name        String
  mobileNo    String
  address     String
  document    Json
  extra       Json?
  userid      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdById String?
  createdBy   User?        @relation("MemberCreatedBy", fields: [createdById], references: [id])
  user        User         @relation("MemberUser", fields: [userid], references: [id], onDelete: Cascade)
  TourMember  TourMember[] @relation("MemberToTourMember")
}

model TourPackage {
  id          String       @id @default(cuid())
  packageName String
  tourPrice   Float
  totalSeat   Int
  coverPhoto  String?
  desc        String
  extra       Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdById String?
  TourMember  TourMember[]
  createdBy   User?        @relation("MemberCreatedBy", fields: [createdById], references: [id])
}

model TourMember {
  id            String           @id @default(cuid())
  memberIds     Json
  tourPackageId String
  packagePrice  Float
  memberCount   Int
  netCost       Float
  discount      Float?
  totalCost     Float
  paymentType   PaymentType
  paymentStatus PaymentStatus    @default(PENDING)
  nextReminder  DateTime?
  lastReminder  DateTime?
  reminderCount Int              @default(0)
  status        TourMemberStatus @default(BOOKED)
  extra         Json?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  createdById   String?
  payments      Payment[]
  createdBy     User?            @relation("MemberCreatedBy", fields: [createdById], references: [id])
  tourPackage   TourPackage      @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)
  members       Member[]         @relation("MemberToTourMember")
}

model Payment {
  id            String        @id @default(cuid())
  tourMemberId  String
  amount        Float
  paymentDate   DateTime      @default(now())
  paymentMethod String
  note          String?
  status        PaymentStatus @default(PAID)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  createdById   String?
  createdBy     User?         @relation("MemberCreatedBy", fields: [createdById], references: [id])
  tourMember    TourMember    @relation(fields: [tourMemberId], references: [id], onDelete: Cascade)
}

model EnquiryForm {
  id          String            @id @default(cuid())
  name        String
  phone       String
  purpose     String
  status      EnquiryFormStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  createdById String?
  createdBy   User?             @relation("MemberCreatedBy", fields: [createdById], references: [id])
}

enum EnquiryFormStatus {
  PENDING
  BOOKED
  NOT_INTERESTED
}

enum PaymentType {
  ONE_TIME
  EMI
  PARTIAL
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
  FAILED
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
  MEMBER
}

enum TourMemberStatus {
  BOOKED
  ENQUIRY
}
