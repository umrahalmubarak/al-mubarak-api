generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  name           String?
  email          String        @unique
  password       String
  role           UserRole      @default(STAFF)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  createdMembers Member[]      @relation("MemberCreatedBy")
  Member         Member[]      @relation("MemberUser")
  TourPackage    TourPackage[] @relation("MemberCreatedBy")
  TourMember     TourMember[]  @relation("MemberCreatedBy")
  Payment        Payment[]     @relation("MemberCreatedBy")
  EnquiryForm    EnquiryForm[] @relation("MemberCreatedBy")
}

model Member {
  id          String       @id @default(cuid())
  name        String
  mobileNo    String
  address     String
  document    Json
  extra       Json?
  user        User         @relation("MemberUser", fields: [userid], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userid      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  TourMember  TourMember[]
  createdBy   User?        @relation("MemberCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdById String?
}

model TourPackage {
  id          String       @id @default(cuid())
  packageName String
  tourPrice   Float
  totalSeat   Int
  coverPhoto  String?
  desc        String       
  extra       Json?
  TourMember  TourMember[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  createdBy   User?   @relation("MemberCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdById String?
}

model TourMember {
  id String @id @default(cuid())

  // Relations
  members       Member[]
  memberIds     Json
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tourPackageId String
  payments      Payment[] // payment history

  // Pricing & Group Info
  packagePrice Float
  memberCount  Int
  netCost      Float
  discount     Float?
  totalCost    Float

  // Payment
  paymentType   PaymentType
  paymentStatus PaymentStatus @default(PENDING)

  // Reminder / WhatsApp
  nextReminder  DateTime?
  lastReminder  DateTime?
  reminderCount Int       @default(0)

  status TourMemberStatus @default(BOOKED)

  extra Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User?   @relation("MemberCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdById String?
}

model Payment {
  id           String     @id @default(cuid())
  tourMember   TourMember @relation(fields: [tourMemberId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tourMemberId String

  amount        Float // paid amount
  paymentDate   DateTime      @default(now())
  paymentMethod String // UPI, Cash, Card, etc.
  note          String? // optional note
  status        PaymentStatus @default(PAID) // in case of failed or pending transactions
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  createdBy   User?   @relation("MemberCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdById String?
}

model EnquiryForm {
  id        String            @id @default(cuid())
  name      String
  phone     String
  purpose   String            
  status    EnquiryFormStatus @default(PENDING)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  createdBy   User?   @relation("MemberCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdById String?
}

enum EnquiryFormStatus {
  PENDING
  BOOKED
  NOT_INTERESTED
}

enum PaymentType {
  ONE_TIME
  EMI
  PARTIAL
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
  FAILED
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
  MEMBER
}

enum TourMemberStatus {
  BOOKED
  ENQUIRY
}

